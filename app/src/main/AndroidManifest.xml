<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartsoft.github">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="GitHub Jetpack"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="GitHub Jetpack"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GitHubActivityUsingState"
            android:label="GitHub - State"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="com.smartsoft.github.GitHubActivityUsingState" />

                <category android:name="com.smartsoft.github.GitHubActivityUsingStateCategory" />
            </intent-filter>

        </activity>

        <activity
            android:name=".GitHubActivityUsingViewModel"
            android:label="GitHub - ViewModel"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="com.smartsoft.github.GitHubActivityUsingViewModel" />

                <category android:name="com.smartsoft.github.GitHubActivityUsingViewModelCategory" />
            </intent-filter>

        </activity>

    </application>

</manifest>